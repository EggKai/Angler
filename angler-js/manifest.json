{
    "manifest_version": 3,
    "name": "Angler",
    "version": "1.0",
    "icons" : {
      "128" : "logo.png" 
    },
    "description": "Automatically detects email content and attachments and then sends it for validation",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://mail.google.com/*"
    ]
  }
  